{
  "name": "xsltv",
  "version": "1.0.0",
  "description": "EPG viewer for xmltv files",
  "private": true,
  "main": "docs/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretest": "eslint --ignore-pattern docs/** --ignore-pattern public/lang/** --ignore-path .gitignore -f compact .",
    "start": "parcel public/index.html --out-dir docs",
    "build": "parcel build public/index.html --out-dir docs --detailed-report --public-url ./",
    "deploy": "cross-env NODE_ENV=production npm run build && git add --all && git commit -m \"latest build\" && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fazzani/xviewer.git"
  },
  "keywords": [
    "epg",
    "xmltv",
    "viewer"
  ],
  "author": "Fazzani Heni",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Fazzani/xviewer/issues"
  },
  "homepage": "https://github.com/Fazzani/xviewer/public/index.html",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "globals": {
      "process": true,
      "window": true,
      "localStorage": true,
      "fetch": true,
      "module": true,
      "console": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "globalReturn": true,
        "generators": false,
        "objectLiteralDuplicateProperties": false,
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "standard-jsx",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "babel",
      "react"
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "rules": {
      "no-console": 0,
      "max-len": [
        1,
        120,
        2,
        {
          "ignoreComments": true
        }
      ],
      "react/jsx-no-bind": [
        "error",
        {
          "allowArrowFunctions": true,
          "allowBind": false,
          "ignoreRefs": true
        }
      ],
      "react/no-did-update-set-state": "error",
      "react/no-unknown-property": "error",
      "react/no-unused-prop-types": "error",
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/prop-types": "error",
      "react/react-in-jsx-scope": "error",
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "always",
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "notify": true,
    "testEnvironment": "./jest/mongo-memory-environment",
    "transform": {},
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname",
      [
        "jest-watch-toggle-config",
        {
          "setting": "verbose"
        }
      ],
      [
        "jest-watch-toggle-config",
        {
          "setting": "collectCoverage"
        }
      ]
    ]
  },
  "dependencies": {
    "babel-eslint": "^10.0.1",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.3",
    "csurf": "^1.9.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "jquery.cookie": "^1.4.1",
    "lang": "^0.1.13",
    "moment": "^2.22.2",
    "popper": "^1.0.1",
    "popper.js": "^1.14.4",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "styles": "^0.2.1",
    "why-did-you-update": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "@babel/runtime-corejs2": "^7.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.5.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "jest-watch-toggle-config": "^1.0.2",
    "jest-watch-typeahead": "^0.2.0",
    "parcel-bundler": "^1.10.2",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0"
  },
  "peerDependencies": {
    "eslint": ">=5.0.0",
    "eslint-plugin-react": ">=7.6.1"
  }
}
