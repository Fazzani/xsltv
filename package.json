{
  "name": "xsltv",
  "version": "1.0.0",
  "description": "EPG viewer for xmltv files",
  "private": true,
  "author": "Fazzani Heni",
  "license": "MIT",
  "homepage": "https://github.com/Fazzani/xviewer/public/index.html",
  "main": "docs/index.js",
  "scripts": {
    "lint": "npm run tslint && npm run eslint",
    "eslint": "node_modules\\.bin\\eslint --ignore-pattern public/lang/** --ignore-path .gitignore ./public",
    "tslint": "tslint --project ./tsconfig.json '**/*.ts' --exclude '**/node_modules/**'",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm test -- --watchAll",
    "build": "parcel build public/index.html --out-dir docs --detailed-report --public-url ./",
    "start": "parcel public/index.html --out-dir docs",
    "push": "git add --all && git commit -m \"vscode deploy\" --no-verify && git push --no-verify",
    "prettify": "prettier --write \"public/**/*.{ts,tsx,js,jsx}\"",
    "prepare": "rm -rf ./docs/**",
    "publish": "cross-env NODE_ENV=production npm run build && npm run push",
    "publish:noverify": "npm run build && git add --all && git commit -m \"fix no-verify\" --no-verify && git push --no-verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fazzani/xviewer.git"
  },
  "keywords": [
    "epg",
    "xmltv",
    "viewer"
  ],
  "bugs": {
    "url": "https://github.com/Fazzani/xviewer/issues"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "react",
      "import",
      "babel",
      "react-hooks"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "jquery": true
    },
    "globals": {
      "global": true,
      "process": true,
      "window": true,
      "localStorage": true,
      "fetch": true,
      "module": true,
      "console": true,
      "XSLTProcessor": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "globalReturn": true,
        "generators": false,
        "objectLiteralDuplicateProperties": false,
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "rules": {
      "no-console": 1,
      "max-len": [
        1,
        150,
        2,
        {
          "ignoreComments": true
        }
      ],
      "react/jsx-no-bind": [
        "error",
        {
          "allowArrowFunctions": true,
          "allowBind": false,
          "ignoreRefs": true
        }
      ],
      "react/no-did-update-set-state": "error",
      "react/no-unknown-property": "error",
      "react/no-unused-prop-types": "error",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/prop-types": "error",
      "react/react-in-jsx-scope": "error",
      "import/newline-after-import": "error",
      "react-hooks/rules-of-hooks": "error",
      "jest/consistent-test-it": [
        "error",
        {
          "fn": "it"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "jest": {
    "testURL": "http://localhost:1234/",
    "verbose": true,
    "browser": false,
    "errorOnDeprecated": true,
    "notify": true,
    "setupFiles": [
      "<rootDir>/tests/setupTests.js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "globals": {
      "XSLTProcessor": true
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**",
      "!**/lang/**",
      "!**/docs/**",
      "!**/tests/**"
    ],
    "coverageReporters": [
      "html",
      "text"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(xsl|xslt)$": "<rootDir>/tests/styleMock.ts",
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|css|less|scss)$": "jest-transform-stub"
    },
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|bin)[/\\\\]"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/react"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-object-assign",
        {}
      ],
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": 2
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/transform-modules-commonjs"
        ]
      }
    }
  },
  "dependencies": {
    "@types/luxon": "^1.10.2",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.2.1",
    "csurf": "^1.9.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "fast-xml-parser": "^3.12.12",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "jquery.cookie": "^1.4.1",
    "js": "^0.1.0",
    "lang": "^0.1.13",
    "luxon": "^1.11.1",
    "popper": "^1.0.1",
    "popper.js": "^1.14.7",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-router-dom": "^4.3.1",
    "react-toastify": "^4.5.2",
    "service-worker": "0.0.0",
    "styles": "^0.2.1",
    "why-did-you-update": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "@babel/runtime-corejs2": "^7.3.1",
    "@types/jest": "^24.0.0",
    "@types/jquery": "^3.3.29",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.10",
    "@types/react": "~16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-router-dom": "^4.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "jest-transform-stub": "^2.0.0",
    "jest-watch-toggle-config": "^1.0.2",
    "jest-watch-typeahead": "^0.2.1",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4",
    "react-test-renderer": "^16.8.1",
    "react-testing-library": "^5.5.3",
    "regenerator-runtime": "^0.13.1",
    "sass": "^1.17.0",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "eslint": ">=5.0.0",
    "eslint-plugin-react": ">=7.6.1"
  }
}
